@{
	ViewData["Title"] = "BOM";
}
@model BOMListOfMaterials

<head>
	<style>
		.btn btn-primary{
			padding: 10px;
			border-color: black;
			color: lightgray;
		}
	</style>
</head>
<body>
	@Html.HiddenFor(m=>m.Materials);
	@using (Html.BeginForm("Index", "BOM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
	{
		@Html.AntiForgeryToken();

		@Html.HiddenFor(m=>m.Length)
		@Html.HiddenFor(m=>m.Width)
		@Html.HiddenFor(m=>m.StoreyHeight)
		@Html.HiddenFor(m=>m.Storeys)

		@Html.ActionLink("Templates", "Templates", "BOM", new { @class = "btn btn-primary" })<br />
		<div>
			@Html.LabelFor(m=>m.ProjectType)
			<div>
				@Html.TextBoxFor(m=>m.ProjectType)
				@Html.ValidationMessageFor(m=>m.ProjectType, "Enter project type")
			</div>
		</div>
		<table>
			<thead>
				<th colspan="2">Project Materials</th>
			</thead>
			<tbody>
				@for(int i = 0; i < Model.Materials.Count; i++)
				{
					@Html.HiddenFor(m=>m.Materials[i])
					@Html.HiddenFor(m=>m.Materials[i].Description)
					@Html.HiddenFor(m=>m.Materials[i].ID)
					<tr>
						<td>
							<p>@Model.Materials[i].Description</p>
						</td>
						<td>
							@Html.CheckBoxFor(m=>m.Materials[i].IsUsed)
						</td>
					</tr>
					<!--Html.Partial("_MaterialItem", Model.Materials[i])-->
				}
			</tbody>
		</table>
		<input type="submit" value="Submit" class="button button2" />
	}
</body>